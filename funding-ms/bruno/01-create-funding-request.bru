meta {
  name: Create Funding Request
  type: http
  seq: 1
}

request {
  method: POST
  url: {{base_url}}/api/v1/funding/requests
  headers {
    Content-Type: application/json
    Accept: application/json
  }
}

body:json {
  {
    "title": "Wheat Procurement Drive",
    "requiredAmount": 75000.0,
    "funderId": "{{funder_id}}",
    "deadline": "2025-12-31T23:59:59"
  }
}

assertions {
  expect status == 200
  expect jsonpath "$.status" == "PENDING"
}

